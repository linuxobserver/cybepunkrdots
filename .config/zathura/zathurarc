set notification-error-bg       "#000000" # bg
set notification-error-fg       "#cccccc" # bright:red
set notification-warning-bg     "#2a2f33" # bg
set notification-warning-fg     "#dddddd" # bright:yellow
set notification-bg             "#000000" # bg
set notification-fg             "#bbbbbb" # bright:green

set completion-bg               "#31363b" # bg2
set completion-fg               "#cccccc" # fg
set completion-group-bg         "#3c3836" # bg1
set completion-group-fg         "#cccccc" # gray
set completion-highlight-bg     "#6cb6eb" # bright:blue
set completion-highlight-fg     "#ffffff" # bg2

# Define the color in index mode
set index-bg                    "#000000" # bg2
set index-fg                    "#cccccc" # fg
set index-active-bg             "#6cb6eb" # bright:blue
set index-active-fg             "#cccccc" # bg2

set inputbar-bg                 "#000000" # bg
set inputbar-fg                 "#cccccc" # fg

set statusbar-bg                "#000000" # bg2
set statusbar-fg                "#cccccc" # fg

set highlight-color             "#deb974" # bright:yellow
set highlight-active-color      "#fe8019" # bright:orange

set default-bg                  "#000000" # bg
set default-fg                  "#cccccc" # fg
set render-loading              true
set render-loading-bg           "#000000" # bg
set render-loading-fg           "#cecece" # fg

# Recolor book content's color
set recolor-lightcolor          "#000000" # bg
set recolor-darkcolor           "#cccccc" # fg
set recolor                     "true"
# set recolor-keephue             true      # keep original color

# Startup options
#
#
set adjust-open width
set recolor true

map <Left> navigate previous
map <Right> navigate next
map <C-=> zoom in
map <C--> zoom out
map B jumplist backward
map b jumplist forward
